@model List<ML.Maintenance.ScnToConfirm>

@{
    ViewData["Title"] = "Sales Check a confirmar";
}

<div class="container-fluid mt-1 px-2">
    <h2 class="mb-4 text-primary fw-bold">
        Sales Check a confirmar
    </h2>
    <hr />

    <div class="row">
        <div class="col d-flex justify-content-end">
            <form method="get" asp-controller="Maintenance" asp-action="GetToConfirmExcel">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-file-earmark-excel"></i> Exportar Excel
                </button>
            </form>
        </div>
    </div>


    <div class="row mt-3">

        @if (Model != null && Model.Any())
            {
                <div class="table-responsive shadow-sm rounded-3">
                    <table class="table table-hover table-bordered table-striped align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>SCN</th>
                                <th>Tienda</th>
                                <th>Estado</th>
                                <th>Fecha Entrega</th>
                                <th>Orden</th>
                                <th>Retencion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ML.Maintenance.ScnToConfirm scn in Model)
                            {
                                <tr>
                                    <td>@scn.num_scn</td>
                                    <td>@scn.cod_pto</td>
                                    <td>@scn.estado</td>
                                    <td>@scn.fec_ent</td>
                                    <td>@scn.ord_rel</td>
                                    <td>@scn.is_rete</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else if (Model != null)
            {
                <div class="alert alert-info mt-4">
                    @ViewBag.Error
                </div>
            }

    </div>
</div>

@section Scripts {
    <script>
        
    </script>
}
